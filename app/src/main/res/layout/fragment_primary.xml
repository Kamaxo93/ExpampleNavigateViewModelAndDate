<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrimaryFragment">

    <TextView
        android:id="@+id/primary_fragment__label__title_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/primary_fragment__btn__btn_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente pantalla"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/primary_fragment__label__title_fragment"
        app:layout_constraintStart_toStartOf="@id/primary_fragment__label__title_fragment"
        app:layout_constraintEnd_toEndOf="@id/primary_fragment__label__title_fragment" />


</androidx.constraintlayout.widget.ConstraintLayout>